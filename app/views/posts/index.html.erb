<h1>Blog</h1>
<h2>ingreso de un nuevo post</h2>
<br>
<div>
<%= form_with(url: post_create_path, model: @post , local: true)do |f| %>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.label :titulo %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group col-md-8">
      <%= f.label :contenido %>
      <%= f.text_field :content, class: 'form-control'  %>
    </div>
  </div>
  <%= f.label :imagen %>
  <%= f.text_field :image, class: 'form-control' %>
  
  <br>
  <%= f.submit "Crear Post" ,class:'btn btn-primary'%>
  
<% end %>
</div>
<br>

<h2>Todos los Post</h2>
<% @posts.each do|post| %>
<div class="card mb-3 mx-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= image_tag post.image, class: "img-fluid" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.content %></p>
        <p class="card-text"><small class="text-muted"> <%= post.created_at %> </small></p>
      </div>
    </div>
  </div>
</div>

<% end %>